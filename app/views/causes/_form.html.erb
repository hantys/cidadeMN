<%= simple_form_for @cause, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :text %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :category_id %>
  <%= f.input :support %>
  <%= f.input :status %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.input :address %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                causes_path, :class => 'btn btn-default' %>
<% end %>
